<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefWidth="550" minWidth="250.0" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="com.ui.ToyInfoController">

    <!-- Center align gridpane -->
    <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100" prefWidth="100" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200" prefWidth="200" />
    </columnConstraints>

    <!-- Header Label -->
    <Label text="Save Toy Information" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" top="20" />
        </GridPane.margin>
    </Label>

    <!-- Toy's Code -->
    <Label text="Toy Code: " GridPane.columnIndex="0" GridPane.rowIndex="1" prefWidth="300" />
    <TextField fx:id="toyCode" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <!-- Toy's Name -->
    <Label text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="2" prefWidth="300" />
    <TextField fx:id="toyName" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <!-- Toy's Description -->
    <Label text="Description: " GridPane.columnIndex="0" GridPane.rowIndex="3" prefWidth="300" />
    <TextField fx:id="description" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <!-- Toy's Price -->
    <Label text="Price: " GridPane.columnIndex="0" GridPane.rowIndex="4" prefWidth="300" />
    <TextField fx:id="price" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <!-- Toy's Manufacturing Date -->
    <Label text="Manufacture Date: " GridPane.columnIndex="0" GridPane.rowIndex="5" prefWidth="300" />
    <TextField fx:id="manufactureDate" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <!-- Toy's Batch Number -->
    <Label text="Batch Number: " GridPane.columnIndex="0" GridPane.rowIndex="6" prefWidth="300" />
    <TextField fx:id="batchNo" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <!-- Toy's Company Name -->
    <Label text="Company Name: " GridPane.columnIndex="0" GridPane.rowIndex="7" prefWidth="300" />
    <TextField fx:id="companyName" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <!-- Toy's Street Address -->
    <Label text="Street Address: " GridPane.columnIndex="0" GridPane.rowIndex="8" prefWidth="300" />
    <TextField fx:id="streetAddress" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="8" />

    <!-- Toy's zip code -->
    <Label text="Zip Code: " GridPane.columnIndex="0" GridPane.rowIndex="9" prefWidth="300" />
    <TextField fx:id="zipCode" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="9" />

    <!-- Any comments -->
    <Label text="Comments: " GridPane.columnIndex="0" GridPane.rowIndex="10" prefWidth="300" />
    <TextField fx:id="comment" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="10" />

    <!-- Submit button -->
    <Button fx:id="submitToyInfo" defaultButton="true" prefHeight="40" prefWidth="100" text="Save"
            GridPane.columnIndex="1" GridPane.rowIndex="11" GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER" onAction="#handleToyInformation">

        <GridPane.margin>
            <Insets top="20" bottom="20"/>
        </GridPane.margin>

    </Button>


</GridPane>
